<launch>

  <arg name="joy_dev" default="/dev/input/js0"/>

  <node name="joy_node" pkg="joy" type="joy_node">
    <param name="dev" value="$(arg joy_dev)"/>
    <param name="autorepeat_rate" value="30.0"/>
  </node>

  <rosparam command="load"
            file="$(find pincher_arm_control)/config/joy_teleop.yaml"/>

  <node name="joy_teleop"
        pkg="joy_teleop"
        type="joy_teleop.py">
    <remap from="cmd_vel" to="servo_server/delta_twist_cmds" />
  </node>

  <node name="servo_server"
        pkg="moveit_servo"
        type="servo_server"
        output="screen" >
    <rosparam command="load"
              file="$(find pincher_arm_control)/config/servo_server.yaml" />
  </node>

  <node name="pincher_group_position_controller"
        pkg="pincher_arm_control"
        type="pincher_group_position_controller"/>

</launch>